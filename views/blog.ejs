<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" alt="nahi mila" width="700px" height="400px">
            <pre class="mt-3"><%= blog.body %></blockquote></pre>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImage %>" alt="nahi mila" width="50px">
            <%= blog.createdBy.fullName %>
        </div>
        <div class="container mt-4">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="Enter yout comment">
                        <button class="btn btn-sm btn-primary mb-3 mt-1">Add</button>
                    </div>
                </form>
                <% } %>
                    <div class="mt-4">
                        <div>
                            <% comments.forEach(comment=> { %>
                                <img src="<%= comment.createdBy.profileImage %>" alt="nahi mila" width="50px">
                                <%= blog.createdBy.fullName %>
                                    <pre><%= comment.content %></pre>
                                    <% }) %>
                        </div>
                    </div>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>